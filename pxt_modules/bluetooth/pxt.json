{
    "name": "bluetooth",
    "description": "Bluetooth services",
    "dependencies": {
        "core": "*"
    },
    "files": [
        "README.md",
        "enums.d.ts",
        "shims.d.ts",
        "bluetooth.ts",
        "bluetooth.cpp",
        "BLEHF2Service.h",
        "BLEHF2Service.cpp"
    ],
    "public": true,
    "targetVersions": {
        "target": "3.1.75",
        "pxt": "6.13.18"
    },
    "icon": "./static/packages/bluetooth/icon.png",
    "yotta": {
        "config": {
            "microbit-dal": {
                "bluetooth": {
                    "enabled": 1
                }
            }
        },
        "optionalConfig": {
            "microbit-dal": {
                "stack_size": 1280,
                "gatt_table_size": "0x700"
            }
        },
        "userConfigs": [
            {
                "description": "Disable Bluetooth Event Service",
                "config": {
                    "microbit-dal": {
                        "bluetooth": {
                            "event_service": 0
                        }
                    }
                }
            }
        ]
    }
}
